{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": "./",
  },
  "include": [
    "packages",
    "playground",
    "docs",
    "types/*"
  ],
  "exclude": [
    "node_modules",
    "server"
  ]
  // "references": [{ "path": "./tsconfig.node.json" }]
}
